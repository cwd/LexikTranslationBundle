    <meta content="Ludwig Ruderstaller <lr@cwd.at>" name="author"/>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/cwdadminmetronic/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/aspetosadmin/css/ekko-lightbox.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/aspetosadmin/css/style.css') }}" />
{% endblock %}

{% block javascriptSection %}
    {% javascripts
        'bundles/cwdadminmetronic/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js'
        'bundles/aspetosadmin/js/ekko-lightbox.min.js'
        'bundles/aspetosadmin/js/main.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block logo %}
    <img src="{{ asset('bundles/aspetosadmin/images/logo.png') }}" class="logo-default" style="margin-top:12px; height:45px" />
{% endblock %}

