{% endblock %}

{% block searchSection %}{% endblock %}

{% block topmenuSection %}
    {% if app.user is not null %}
    <ul class="nav navbar-nav pull-right">
        <li class="separator hide">
        </li>

        <li class="dropdown dropdown-user">
            <a href="#" class="dropdown-toggle text-grey" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                <span class="username username-hide-on-mobile text-grey">{{ app.user.firstname }} {{ app.user.lastname }} </span>
                <img alt="" class="img-circle" src="{{ app.user.email|gravatar }}"/>
            </a>
            <ul class="dropdown-menu dropdown-menu-default">
            {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                <li>
                    <a href="{{ path('aspetos_admin_dashboard_index', {'_switch_user': '_exit'}) }}"><i class="fa fa-unlock-alt"></i> <b>{{ "Exit impersonation"|trans }}</b></a>
                </li>
            {% endif %}
                <li>
                    <a href=""><i class="icon-user"></i> {{ "Profile"|trans }} </a>
                </li>
                {% if is_granted('ROLE_MORTICIAN') and app.user.mortician is not null %}
                    <li>
                        <a href="{{ path('aspetos_admin_mortician_mortician_detail', { id: app.user.mortician.id }) }}"><i class="icon-info"></i> {{ "My page" }}</a>
                    </li>
                {% endif %}
                <li class="divider">
                </li>
                <li>
                    <a href="{{ path('admin_logout') }}">
                        <i class="icon-key"></i> {{ "Logout"|trans }} </a>
                </li>
            </ul>
        </li>
    </ul>
    {% endif %}
{% endblock %}

