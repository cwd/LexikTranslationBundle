{% extends 'CwdAdminMetronicBundle:Menu:menu.html.twig' %}

{% block list %}
    {% if item.hasChildren and options.depth is not same as(0) and item.displayChildren %}
        {% import _self as knp_menu %}
        <ul class="page-sidebar-menu neos " data-keep-expanded="false" data-auto-scroll="true" data-slide-speed="200">
            {{ block('children') }}
        </ul>
    {% endif %}
{% endblock %}

{% block dividerElement %}
    {% if item.level == 1 %}
        <li class="divider-vertical"><hr class="separator" /></li>
    {% else %}
        <li class="divider"><hr class="separator" /></li>
    {% endif %}
{% endblock %}
