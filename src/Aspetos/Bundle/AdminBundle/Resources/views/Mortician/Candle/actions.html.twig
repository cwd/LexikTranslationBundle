<div class="btn-group btn-group-solid">
    {% if is_granted('mortician.obituary.candle.edit', dt_obj.obituary.mortician) %}
        {% if dt_obj.state == 'active' %}
            <a href="{{ path(block_route, {'id':dt_item, 'morticianId':  dt_obj.obituary.mortician.id, 'obituaryId': dt_obj.obituary.id}) }}" class="btn red-thunderbird btn-xs tooltips ajaxCall" data-placement="top" data-container="body" data-original-title="{{ "Deactivate"|trans }}"><i class="fa fa-power-off"></i></a>
        {% elseif dt_obj.state == 'inactive' %}
            <a href="{{ path(unblock_route, {'id':dt_item, 'morticianId':  dt_obj.obituary.mortician.id, 'obituaryId': dt_obj.obituary.id}) }}" class="btn green-jungle btn-xs tooltips ajaxCall" data-placement="top" data-container="body" data-original-title="{{ "Activate"|trans }}"><i class="fa fa-power-off"></i></a>
        {% endif %}
    {% endif %}
