{% set themeColor = 'blue-steel' %}
{% set themeStyle = 'light' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            {% embed "CwdAdminMetronicBundle:Helper:portlet.html.twig" with {'title': 'Obituaries'|trans, 'icon': icon} %}
                {% block body %}
                    {{ datatable({
                        'main_template':    'CwdAdminMetronicBundle:Grid:grid.html.twig',
                        'js' : {
                            'sAjaxSource' : path('aspetos_admin_mortician_obituary_ajaxgrid', { "morticianId" : mortician.id}),
                            'aoColumnDefs' : [
                                {
                                    'aTargets': [0],
                                    'sWidth' : '40px',
                                    'sClass' : 'text-right'
                                },
                                {
                                    'aTargets': [1, 4],
                                    'sWidth' : '30px',
                                    'sClass' : 'text-center'

                                },
                                {
                                    'aTargets': [5],
                                    'sWidth': '50px',
                                    'sClass' : 'text-right'
                                },
                                {
                                    'aTargets': [-1, -2, -3, -4],
                                    'sWidth' : '60px',
                                    'sClass' : 'text-center'
                                },
                                {
                                    'aTargets': [-1, -2, -3],
                                    'orderable': false
                                }
                            ]
                        }
                    })
                    }}
                {% endblock %}
                {% block actions %}
                    {% if is_granted('mortician.obituary.create', mortician) %}
                    <div class="btn-group">
                        <a href="{{ path('aspetos_admin_mortician_obituary_create', { morticianId: mortician.id }) }}" class="btn btn-default btn-sm">{{ "Add Obituary"|trans }}</a>
                    </div>
                    {% endif %}
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="#" data-toggle="dropdown">
                            {{ "Columns"|trans }} <i class="fa fa-angle-down"></i>
                        </a>
                        <div class="dropdown-menu hold-on-click dropdown-checkboxes columnToggler">
                        </div>
                    </div>
                    <div class="btn-group">
                        <a href="#" class="btn btn-default btn-sm refreshGrid" href="#"><i class="fa fa-refresh"></i> {{ "Refresh"|trans }}</a>
                    </div>
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm fullscreen" href="#" data-original-title="" title=""><i class="fa fa-expand"></i></a>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
