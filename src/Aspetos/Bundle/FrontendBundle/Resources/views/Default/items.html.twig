{% import "AspetosFrontendBundle:Layout:macros.html.twig" as macros %}

{% for data in items %}
    {% set obituary = data.obituary_item %}
    <div
        data-id="{{ obituary.id }}"
        class="col-xs-6 col-lg-3 col-md-4 product-item-wrapper districts-{{ obituary.district.id|default('0') }}"
        data-district="{{ obituary.district.id|default('0') }}"
    >
        <div class="product-item">
            <div style="min-height:250px" class="pi-img-wrapper">
                <a href="{{ path('aspetos_frontend_obituary_detail', {id: obituary.id}) }}">
                    {{ macros.obituaryImage(obituary, 200) }}
                </a>
                <div style="font-size:10px">
                    <a class="btn btn-default" title="{{ 'Candles'|trans }}" href="{{ path('aspetos_frontend_obituary_detail', {id: obituary.id}) }}#candle">
                        {{ data.candle_count }} <i class="fa fa-fire"></i>
                    </a>
                    <a class="btn btn-default" title="{{ 'Condolences'|trans }}" href="{{ path('aspetos_frontend_obituary_detail', {id: obituary.id}) }}#condolence">
                        {{ data.condolence_count }} <i class="fa fa-book"></i>
                    </a>
                </div>
            </div>

            <h3 style="text-transform: none; padding-bottom:0; padding-top:5px">
                <a href="{{ path('aspetos_frontend_obituary_detail', {id: obituary.id}) }}">{{ macros.name(obituary) }}</a>
            </h3>
            <span>â€  {{ macros.date(obituary.dayOfDeath) }}</span><br>
            <span>{{ obituary.cemetery.name|default(obituary.legacyCemetery) }}</span><br>
        </div>
    </div>
{% endfor %}