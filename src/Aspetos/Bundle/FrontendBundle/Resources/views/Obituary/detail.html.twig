                {% if obituary.allowCondolence %}
                    <div id="condolence" class="tab-pane" role="tabpanel">
                    <div style="background-color:white" class="row padding-top-10">
                        <div class="col-xs-12">
                            {% for condolence in obituary.condolences %}
                                <div class="condolence">
                                    <div style="font-family:'PT Sans Narrow'; font-size:20px" class="condolence-text">
                                        {{ condolence.content }}
                                    </div>
                                    <div class="text-right">
                                        {{ condolence.fromNAme }}, {{ macros.date(condolence.createdAt) }}
                                    </div>
                                    <hr>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>

        <div style="text-transform:none" class="sidebar col-md-4 col-sm-4">
            {% for event in events %}
                <div style="margin-top:0" class="bs-callout bs-callout-info">
                    <h4>{{ event.obituaryEventType.name }}</h4>
                    <p>
                        {{ macros.dateAndTime(event.dateStart) }}
                        {% if event.description is not empty %}
                            - {{ event.description }}
                        {% endif %}
                    </p>
                </div>
            {% endfor %}

            {% if obituary.mortician is not empty %}
                <div class="sidebar-filter margin-bottom-20">
                    <h2>{{ 'Mortician'|trans }}</h2>
                    <hr class="margin-top-0">
                    <a href="_bestatter.php">
                        {{ macros.morticianImage(obituary.mortician) }}
                    </a>
                    <h3><a href="_bestatter.php">{{ obituary.mortician.name }}</a></h3>
                    {{ macros.dataRow(macros.address(obituary.mortician.address), '', 'text', '', 'col-md-1', 'col-md-10', 'fa fa-home') }}
                    {{ macros.dataRow(obituary.mortician.phone, '', 'phone', '', 'col-md-1', 'col-md-10', 'fa fa-phone') }}
                    {{ macros.dataRow(obituary.mortician.email, '', 'mail', '', 'col-md-1', 'col-md-10', 'fa fa-envelope') }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascriptDocReady %}
    $('.candles .candle-wrapper').matchHeight();
{% endblock %}