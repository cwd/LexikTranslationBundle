{% extends 'AspetosFrontendBundle:Layout:master.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-4">
            <h1>{{ macros.name(obituary) }} † {{ macros.date(obituary.dayOfDeath) }}</h1>
            {% if obituary.age is not empty %}
                <span>{{ obituary.age }} {{ 'years'|trans }},</span>
            {% endif %}
            <span>{{ '	last resting-place'|trans }}: {{ obituary.cemetery.name|default(obituary.legacyCemetery) }}</span>
        </div>

        <div class="col-md-8 text-right">
            <ul role="tablist" class="nav nav-pills navbar-right tablist">
                <li class="active" role="presentation">
                    <a data-toggle="tab" role="tab" aria-controls="parte" href="#parte" class="btn btn-default">
                        <i class="fa fa-bookmark"></i> {{ 'Obituary'|trans }}
                    </a>
                </li>
                <li role="presentation">
                    <a data-toggle="tab" role="tab" aria-controls="candle" href="#candle" class="btn btn-default">
                        <i class="fa fa-fire"></i> {{ 'Candles'|trans }}
                        <span style="background-color:lightgrey" class="badge">{{ obituary|countCandles('active') }}</span>
                    </a>
                </li>
                {% if obituary.allowCondolence %}
                    <li role="presentation">
                        <a data-toggle="tab" role="tab" aria-controls="condolence" href="#condolence" class="btn btn-default">
                            <i class="fa fa-book"></i> {{ 'Condolences'|trans }}
                            <span style="background-color:lightgrey" class="badge">{{ obituary.condolences|length }}</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
