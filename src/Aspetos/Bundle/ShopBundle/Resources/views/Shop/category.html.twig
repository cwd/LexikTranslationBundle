{% extends 'AspetosFrontendBundle:Layout:master.html.twig' %}

{% block sidebar %}
    {{ knp_menu_render('shop_category_sidebar') }}
{% endblock %}

{% block content %}
    <h2>{{ category.name }}</h2>
    <div class="products">
        {% for product in products %}
            <div class="product-item">
                <h3><a href="{{ path('aspetos_shop_product', { 'slug': product.slug }) }}">{{ product.name }}</a></h3>
            </div>
        {% endfor %}
    </div>
{% endblock %}
